{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "baseUrl": "./",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "scripts"
    ]
}