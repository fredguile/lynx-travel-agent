{
  "name": "panpac-helper-browser-extension",
  "version": "1.0.0",
  "description": "Firefox/Chrome extension to use as helper for Pan PAC day to day tasks",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build-tsc": "tsc",
    "build-assets": "copyfiles -u 1 src/manifest.json src/**/*.html src/styles/*.css src/icons/*.png dist/",
    "build": "yarn clean && yarn build-tsc && yarn build-assets",
    "test-rag": "ts-node --project tsconfig.dev.json scripts/test_rag.ts"
  },
  "author": "Fred Ghilini <fredguile@gmail.com>",
  "license": "UNLICENSED",
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "dependencies": {},
  "devDependencies": {
    "@langchain/community": "^0.3.43",
    "@langchain/core": "^0.3.56",
    "@langchain/openai": "^0.5.10",
    "@supabase/supabase-js": "^2.49.5",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/node": "^22.15.2",
    "copyfiles": "^2.4.1",
    "prettier": "^3.5.3",
    "supabase": "^2.23.4",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2"
  }
}
